<script>
    //ham animations
    const hamicon = document.querySelector(".icon0");
    const hamlines = document.querySelectorAll(".ham span");

    //mainmenu dropdown animations
    const dropdownlinks = document.querySelectorAll(".mainmenu li");
    const contactdropdown = document.querySelector(".m2");
    const mainmenuprojectsdrop = document.querySelector(".seconddrop");

    //mainmenu arrow animations
    const arrowicon = document.querySelector(".arrow");
    const arrowimage = document.querySelector(".arrowicon");

    //header animation
    const header = document.querySelector("header");
    const headericons = document.querySelectorAll(".sidemove");

    //folder slide animations
    const foldericon = document.querySelector(".icon4");
    const headerprojectsmenu = document.querySelector(".projectslide");

    //dots slide animations
    const dotsicon = document.querySelector(".icon7");
    const movementdots = document.querySelectorAll(".dot-move");
    const headermoremenu = document.querySelector(".moreslide");
    
    const arrowDrop = () => {
        arrowimage.classList.toggle("activeN");
        contactdropdown.classList.toggle("activeN");
        mainmenuprojectsdrop.classList.toggle("activeN");
    };

    const collapseSlideMenu = () => {
        if(headerprojectsmenu.classList.contains("active")){
            headerprojectsmenu.classList.toggle("active");
        }
        if(headermoremenu.classList.contains("active")){
            headermoremenu.classList.toggle("active");
            movementdots.forEach((dot) => dot.classList.toggle("active"));
        }
    }

    foldericon.addEventListener("click", (e)=>{
        headerprojectsmenu.classList.toggle("active"); 
    });

    dotsicon.addEventListener("click", (e)=>{
        movementdots.forEach((dot) => dot.classList.toggle("active"));
        headermoremenu.classList.toggle("active");
    })

    hamicon.addEventListener("click",(e)=>{
        //for mobile landscape transform
        header.classList.toggle("active");
        headericons.forEach((icon) => icon.classList.toggle("active"));

        //for mobile portrait transform
        hamlines.forEach((line) => line.classList.toggle("active"));
        dropdownlinks.forEach((link) => link.classList.toggle("active"));
        
        //for mobile portrait transform: when exiting menu, closes the sub menu
        if(arrowimage.classList.contains("activeN")){
            arrowDrop();
        }
        collapseSlideMenu();
    });

    arrowicon.addEventListener("click",(e)=>{
        arrowDrop();
    });
</script>
